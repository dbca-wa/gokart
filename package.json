{
  "name": "gokart",
  "description": "A Vue.js project",
  "author": "Adon Metcalfe <adonm@fastmail.fm>",
  "license": "Apache-2.0",
  "repository": "https://github.com/parksandwildlife",
  "config": {
    "app": "sss"
  },
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr --external src/vendor.js -e src/apps/$npm_package_config_app.js -o dist/$npm_package_config_app.js",
    "serve": "uwsgi -i uwsgi.ini",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "npm-run-all vendor buildapp",
    "buildapp": "browserify --external src/vendor.js -e src/apps/$npm_package_config_app.js -o dist/$npm_package_config_app.js",
    "vendor": "cross-env NODE_ENV=production browserify -g browserify-css -r ./src/vendor.js:src/vendor.js | uglifyjs -c warnings=false -m > dist/vendor.js",
    "lint": "eslint --ext .js,.vue src test/unit",
    "test": "karma start karma.conf.js"
  },
  "browserify": {
    "transform": [
      "vueify",
      [
        "babelify",
        {
          "only": "src"
        }
      ],
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation-sites": "./node_modules/foundation-sites/dist/foundation.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation-sites": {
      "depends": [
        "jquery"
      ]
    }
  },
  "dependencies": {
    "browserify-css": "^0.9.1",
    "browserify-shim": "^3.8.12",
    "dragula": "^3.7.1",
    "font-awesome": "^4.6.3",
    "foundation-sites": "^6.2.3",
    "kjua": "^0.1.1",
    "lokijs": "^1.4.1",
    "moment": "^2.14.1",
    "openlayers": "^3.17.1",
    "svg4everybody": "^2.1.0",
    "vue": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.5",
    "eslint": "^3.0.1",
    "eslint-plugin-html": "^1.1.0",
    "eslint-plugin-vue": "^0.1.1",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.23",
    "npm-run-all": "^1.6.0",
    "phantomjs-prebuilt": "^2.1.3",
    "proxyquireify": "^3.0.1",
    "uglify-js": "^2.5.0",
    "vueify": "^8.5.2",
    "watchify": "^3.4.0"
  }
}
